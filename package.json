{
  "name": "default-setup",
  "version": "1.0.0",
  "description": "My default node projects setup",
  "main": "src/server.ts",
  "scripts": {
    "build": "rimraf dist/ && tsc -p tsconfig-build.json",
    "start": "node dist/main/server.js",
    "dev": "ts-node-dev  --respawn --transpile-only --ignore-watch node_modules --clear --exit-child --rs --no-notify src/main/server.ts",
    "style": "prettier --check **/*.ts",
    "style:fix": "prettier --write **/*.ts",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:cache": "jest --clearCache",
    "test:ci": "yarn test --coverage",
    "test:unit": "yarn test -c jest-unit-config.js",
    "test:func": "yarn test -c jest-functional-config.js",
    "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriellopes00/node-project-setup.git"
  },
  "author": "Gabriel Lopes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabriellopes00/node-project-setup/issues"
  },
  "homepage": "https://github.com/gabriellopes00/node-project-setup#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "module-alias": "^2.2.2",
    "pino": "^6.11.1",
    "pino-pretty": "^4.6.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/jest": "^26.0.20",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.25",
    "@types/pino": "^6.3.6",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "coveralls": "^3.1.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "14"
  },
  "_moduleAliases": {
    "@": "dist/"
  }
}
